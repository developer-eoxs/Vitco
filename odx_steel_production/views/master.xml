<!--                sequence="20"/>-->
        <menuitem
                id="menu_production_scheduler"
                name="Scheduler"
                action="action_machine_master"
                parent="menu_production_processing_instructions_topmenu"
                sequence="22"/>

<!-- -->
    </data>
</odoo>